%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  %a.navbar-brand{:href => "#"} Navbar
  %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item.active
        %a.nav-link{:href => "#"}
          Home
          %span.sr-only (current)
      %li.nav-item
        = link_to I18n.t("path.Users"), users_path, class: "nav-link"
      %li.nav-item
        = link_to I18n.t("path.Seats"), seats_path, class: "nav-link"
      %li.nav-item
        = link_to I18n.t("path.Bookings"), bookings_path, class: "nav-link"
    %ul.navbar-nav.ml-auto.mr-4
      %li.nav-item.dropdown{"data-toggle" => "tooltip", "data-placement" => "bottom", title: "Lang"}
        %a#navbarDropdownMenuLink{"data-toggle" => "dropdown", "aria-haspopup" => true, "aria-expanded" => false}
          = fa_icon "language", class: "pt-2"
        .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "navbarDropdownMenuLink"}
          = link_to params.permit(:utf8, :keyword).merge(lang: "zh-CN"), class: "dropdown-item" do
            = flag_icon(:cn)
            简体中文
          = link_to params.permit(:utf8, :keyword).merge(lang: :en), class: "dropdown-item" do
            = flag_icon(:gb)
            English
    %form.form-inline.my-2.my-lg-0
      %input.form-control.mr-sm-2{"aria-label" => "Search", :placeholder => "Search", :type => "search"}/
      %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Search
