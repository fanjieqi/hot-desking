= bootstrap_form_tag(url: controller_name, layout: :inline, method: :get) do |f|
  = f.search_field :keyword, hide_label: true, value: params[:keyword], class: "w-100", wrapper_class: "mb-0", autofocus: params[:keyword].present?, onfocus: "var temp_value=this.value; this.value=''; this.value=temp_value"
  = f.submit "Search", class: "btn btn-outline-success"

:css
  input:focus::-webkit-input-placeholder { color:transparent !important; }
  input:focus:-moz-placeholder { color:transparent !important; } /* FF 4-18 */
  input:focus::-moz-placeholder { color:transparent !important; } /* FF 19+ */
  input:focus:-ms-input-placeholder { color:transparent !important; } /* IE 10+ */
